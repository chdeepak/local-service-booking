[Unit]
Description=Local Service Booking Application
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/ubuntu/local-service-booking
# Load environment variables from a file (managed by deploy script)
EnvironmentFile=/etc/local-service-booking.env
ExecStart=/usr/bin/node dist/main.js
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
